<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bitmir</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        .navbar {
            background-color: #232f3e; /* Dark background */
        }

        .navbar-brand {
            color: #f08804; /* Logo color */
            font-size: 1.5rem;
            font-weight: bold;
        }

            .navbar-brand:hover {
                color: #ffa41b;
            }

        .navbar .nav-link {
            color: white;
        }

            .navbar .nav-link:hover {
                color: #f08804;
            }

        .search-bar {
            display: flex;
            gap: 5px;
            width: 100%;
        }

            .search-bar input {
                height: 36px;
                border: none;
                outline: none;
                padding: 0 10px;
                flex: 1;
                border-radius: 5px 0 0 5px;
            }

            .search-bar button {
                background-color: #f08804;
                color: white;
                border: none;
                padding: 0 15px;
                border-radius: 0 5px 5px 0;
                cursor: pointer;
            }

        .navbar-cart {
            display: flex;
            align-items: center;
            color: white;
            gap: 5px;
            text-decoration: none;
        }

            .navbar-cart:hover {
                color: #f08804;
                text-decoration: none;
            }

        .footer {
            background-color: #232f3e;
            color: white;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Bitmir
                </a>
                <!-- Toggle button for mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Links and search -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="admin" asp-action="WelcomeAdmin">Admin</a>
                        </li>
                    </ul>
                    <!-- Search bar -->
                    <form class="search-bar">
                        <input type="text" placeholder="Search Bitmir..." />
                        <button type="submit">🔍</button>
                    </form>
                    <!-- Cart -->
                    <a href="@Url.Action("Cart", "Shopping")" class="navbar-cart ms-3">
                        <i class="bi bi-cart-fill" style="font-size: 1.5rem;"></i>
                        <span>(0)</span>
                    </a>
                    <!-- User Login -->
                    <div class="ms-3">
                        <a href="@Url.Action("login", "home")" class="btn btn-warning btn-sm">Login</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
